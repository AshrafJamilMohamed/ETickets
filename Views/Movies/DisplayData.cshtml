@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List Of Movies";
}
<div style="Position:fixed" class="text-white">
    <a asp-controller="Movies" asp-action="Create" class="btn btn-success">
        <i class="bi bi-pluse-circle"></i>
        Add New
    </a>

</div>
<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Image</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>@Html.DisplayNameFor(model => model.Price)</th>
                    <th>@Html.DisplayNameFor(model => model.ImageURL)</th>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th>@Html.DisplayNameFor(model => model.ProducerID)</th>
                    <th>@Html.DisplayNameFor(model => model.CinemaID)</th>
                    <th>@Html.DisplayNameFor(model => model.MovieCategory)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImageURL" alt="@item.Name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ImageURL)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProducerID)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CinemaID)
                        </td>           <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.MovieCategory)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>


                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>



